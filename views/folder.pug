extends layout

block content
 
  h1= folder.title

  button(class='open-form') edit 
  dialog(class='modal' id='modal')
    form(method='POST', action=`/folders/${folder.id}/update`)
      label(for='title') Folder Name:
      input(type='text' name='title' value= folder.title)
      input(type='submit', value='Update')
    button(class='close-button') close modal
   
  form(method="post", action=`/folders/${folder.id}/delete`)
    input(type='submit', value='Delete')
  if(folder.file)
    each file in folder.file
      li= file

  include utils.pug